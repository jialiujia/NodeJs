        li#li_map.gognneng01(style='cursor:pointer', onclick="changeGongnengStyle('li_map')", href='/map') 地图视图
        li#li_safety.gognneng02(style='cursor:pointer', onclick="changeGongnengStyle('li_safety')", href='/safety') 安全诊断
